# ============================================
# SolMate - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit real credentials to version control!

# ============================================
# APP CONFIGURATION
# ============================================

# Your app's public URL (no trailing slash)
NEXT_PUBLIC_APP_URL=https://playsolmates.app

# Base URL for API routes (usually same as APP_URL)
NEXT_PUBLIC_BASE_URL=https://playsolmates.app

# Node environment (development/production)
NODE_ENV=production

# Server port (internal, behind reverse proxy)
PORT=3000

# Database name
DB_NAME=solmate

# ============================================
# DATABASE
# ============================================

# MongoDB connection string
MONGO_URL=mongodb://localhost:27017/solmate
# Or for MongoDB Atlas:
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/solmate?retryWrites=true&w=majority

# ============================================
# NEXTAUTH CONFIGURATION (Required for OAuth)
# ============================================

# NextAuth secret - REQUIRED
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32

# NextAuth URL - REQUIRED (must match your production domain)
NEXTAUTH_URL=https://playsolmates.app

# ============================================
# JWT (Legacy wallet auth - still used)
# ============================================

# JWT secret for wallet-based session tokens
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random

# ============================================
# OAUTH PROVIDERS
# ============================================

# --- Google OAuth ---
# Get credentials at: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: https://playsolmates.app/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# --- Facebook/Meta OAuth ---
# Get credentials at: https://developers.facebook.com/apps/
# Valid OAuth Redirect URIs: https://playsolmates.app/api/auth/callback/facebook
# Required: Privacy Policy URL (https://playsolmates.app/privacy-policy)
# Required: Data Deletion Callback URL (https://playsolmates.app/api/auth/data-deletion)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# --- Twitter/X OAuth 2.0 ---
# Get credentials at: https://developer.twitter.com/en/portal/projects-and-apps
# Callback URL: https://playsolmates.app/api/auth/callback/twitter
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# ============================================
# EMAIL / SMTP CONFIGURATION (Zoho Mail)
# ============================================

# SMTP Host (Zoho)
SMTP_HOST=smtp.zoho.com

# SMTP Port (465 for SSL, 587 for TLS)
SMTP_PORT=465

# Sender email address
SMTP_USER=noreply@playsolmates.app

# Zoho App Password (NOT your login password)
# Generate at: https://accounts.zoho.com/home#security/security_app-password
SMTP_PASS=your-zoho-app-password

# ============================================
# SOLANA CONFIGURATION
# ============================================

# Network: devnet, testnet, or mainnet-beta
NEXT_PUBLIC_SOLANA_CLUSTER=devnet

# Solana RPC URL (use a dedicated RPC for production)
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
# Or use Helius, QuickNode, Alchemy, etc.
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com

# Alias for SOLANA_CLUSTER
NEXT_PUBLIC_SOLANA_NETWORK=devnet

