# =============================================================================
# PlaySolMates - Production Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# MongoDB connection string
# For production, use MongoDB Atlas or your own MongoDB server
MONGO_URL=mongodb://localhost:27017
DB_NAME=solmate

# -----------------------------------------------------------------------------
# APPLICATION URLs
# -----------------------------------------------------------------------------
# Your production domain (no trailing slash)
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
NEXTAUTH_URL=https://yourdomain.com

# CORS origins (comma-separated, or * for development)
CORS_ORIGINS=https://yourdomain.com

# -----------------------------------------------------------------------------
# AUTHENTICATION SECRETS
# -----------------------------------------------------------------------------
# IMPORTANT: Generate secure random strings for production!
# Generate with: openssl rand -base64 32

# NextAuth secret (for session encryption)
NEXTAUTH_SECRET=generate-a-secure-random-string-here

# JWT secret (for wallet-based auth tokens)
JWT_SECRET=generate-another-secure-random-string-here

# -----------------------------------------------------------------------------
# SMTP / EMAIL CONFIGURATION (Zoho Mail)
# -----------------------------------------------------------------------------
# Used for: signup verification, password reset, password change confirmation
SMTP_HOST=smtp.zoho.eu
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-zoho-app-password
EMAIL_FROM=PlaySolMates <noreply@yourdomain.com>

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS (Optional)
# -----------------------------------------------------------------------------
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth - https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# X (Twitter) OAuth - https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# SOLANA BLOCKCHAIN CONFIGURATION
# -----------------------------------------------------------------------------
# Cluster: 'devnet' for testing, 'mainnet-beta' for production
NEXT_PUBLIC_SOLANA_CLUSTER=mainnet-beta

# RPC URL - Use a dedicated RPC for production (Helius, QuickNode, etc.)
# Free tier may have rate limits
NEXT_PUBLIC_RPC_URL=https://api.mainnet-beta.solana.com

# -----------------------------------------------------------------------------
# PAYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Your Solana wallet address to receive VIP payments
NEXT_PUBLIC_DEVELOPER_WALLET=YourSolanaWalletAddressHere
DEVELOPER_WALLET=YourSolanaWalletAddressHere

# USDC Mint addresses (do not change these)
NEXT_PUBLIC_USDC_MINT_DEVNET=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU
NEXT_PUBLIC_USDC_MINT_MAINNET=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# VIP Price in USDC
VIP_PRICE_USDC=6.99

# -----------------------------------------------------------------------------
# DEBUG FLAGS (set to false for production)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEBUG_QUICKCHAT=false
